<div id="signUp">
  <h1>Sign up</h1>
  <form action="/signup" method="post" class="signUp">
    {{#if message.passwordsAreDifferent}}
    <div class="alert alert-danger" role="alert">
      Passwords are different. Write them again
    </div>
    {{/if}}
    <div class="form-group row">
      <label for="userName" class="col-md-2">Username</label>
      <div class="col-md-10">
        <input type="text" class="form-control {{#if message.userAlreadyExists}} is-invalid {{/if}}" id="userName" name="userName"
          {{#if userData}} {{#unless message.userAlreadyExists}}value="{{userData.userName}}" {{/unless}}{{/if}}> {{#if
        message.userAlreadyExists}}
        <div class="invalid-feedback">
          Please choose a valid username.
        </div>
        {{/if}}
      </div>
    </div>
    <div class="form-group row">
      <label for="mail" class="col-md-2">Mail</label>
      <div class="col-md-10">
        <input type="mail" class="form-control" id="mail" name="mail" {{#if userData}} value="{{userData.mail}}" {{/if}}>
      </div>
    </div>
    <div class="form-group row">
      <label for="password" class="col-md-2">Password</label>
      <div class="col-md-4">
        <input type="password" class="form-control {{#if message.passwordsAreDifferent}} is-invalid {{/if}}" id="password" name="passwordUser">        {{#if
        message.passwordsAreDifferent}}
        <div class="invalid-feedback">
          Passwords are different. Write them again
        </div>
        {{/if}}
      </div>
      <label for="repeatPassword" class="col-md-2">Repeat password</label>
      <div class="col-md-4">
        <input type="password" class="form-control {{#if message.passwordsAreDifferent}} is-invalid {{/if}}" id="repeatPassword"
          name="repeatPassword"> {{#if message.passwordsAreDifferent}}
        <div class="invalid-feedback">
          Passwords are different. Write them again
        </div>
        {{/if}}
      </div>
    </div>
    <button type="submit" class="btn-lg btn-outline-info">Sign up</button>
  </form>
</div>